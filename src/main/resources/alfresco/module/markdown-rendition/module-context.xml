<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Thread pool to run post-commit work -->
    <bean id="markdownTaskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="2"/>
        <property name="maxPoolSize" value="4"/>
        <property name="queueCapacity" value="100"/>
        <property name="threadNamePrefix" value="markdown-rendition-"/>
        <property name="waitForTasksToCompleteOnShutdown" value="true"/>
    </bean>

    <!-- TX listener + dispatcher -->
    <bean id="markdownRenditionTxnQueue" class="org.alfresco.behaviour.MarkdownRenditionTxnQueue">
        <property name="transactionService" ref="TransactionService"/>
        <property name="taskExecutor" ref="markdownTaskExecutor"/>
        <property name="markdownCreator" ref="markdownRenditionCreator"/>
    </bean>

    <!-- Helper that performs the transform + stores rn:rendition/cm:markdown -->
    <bean id="markdownRenditionCreator"
          class="org.alfresco.behaviour.MarkdownRenditionCreator">
        <property name="serviceRegistry" ref="ServiceRegistry"/>
        <property name="images" value="${markdown.images}"/>
        <property name="language" value="${markdown.language}"/>
    </bean>

    <!-- Behaviour A: reacts to creation of cm:pdf rendition -->
    <bean id="pdfRenditionAssociationBehaviour"
          class="org.alfresco.behaviour.PdfRenditionAssociationBehaviour"
          init-method="init">
        <property name="policyComponent" ref="policyComponent"/>
        <property name="markdownQueue" ref="markdownRenditionTxnQueue"/>
    </bean>

    <!-- Behaviour B: reacts when original node is a PDF (upload/update/create) -->
    <bean id="pdfOriginalContentBehaviour"
          class="org.alfresco.behaviour.PdfOriginalContentBehaviour"
          init-method="init">
        <property name="policyComponent" ref="policyComponent"/>
        <property name="serviceRegistry" ref="ServiceRegistry"/>
        <property name="markdownQueue" ref="markdownRenditionTxnQueue"/>
    </bean>

</beans>
